<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rima.health_consultant.Login_Activity"
    android:background="@drawable/shormi"
>


    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Login"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/abc_secondary_text_material_light"
        android:textSize="35dp"



        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hello_world10"
        android:id="@+id/textView10"
        android:layout_marginTop="70dp"

        android:textSize="25dp"
        android:textColor="@color/abc_secondary_text_material_light"

        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_log_un"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10">

        android:layout_marginTop="90dp"
        <requestFocus />

        </EditText>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hello_world12"
        android:id="@+id/textView11"
        android:layout_below="@+id/editText_log_un"
        android:layout_alignLeft="@+id/editText_log_un"
        android:layout_alignStart="@+id/editText_log_un"
        android:layout_marginTop="54dp"

        android:textColor="@color/abc_secondary_text_material_light"
        android:textSize="25dp"


        />

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_log_pass"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="5dp">


        <requestFocus />
        </EditText>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Log In"
        android:id="@+id/button_login_ok"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:background="@drawable/button3"
        android:textColor="@color/abc_secondary_text_material_dark"
        />


</RelativeLayout>
